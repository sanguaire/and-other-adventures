<div class="list-row relative">
    <i class="drag fa-solid fa-grip-vertical" draggable="true"></i>
    <input type="text" data-dtype="text" value="{{name}}" data-property="name">
    {{#if system.magical}}
        <i class="fa-solid fa-sparkles" style="margin-right: 0.8em" data-tooltip="{{localize 'aoa.magical'}}"></i>
    {{/if}}
</div>
<div class="list-row justify-end" style="gap: 0.5em;">
    <span>
        <a data-action="equip" class="equipped {{#if system.equipped}}active{{/if}}">
            {{#if system.needFreeHand}}
                <i class="fa-solid fa-hand"></i>
            {{else}}
                <i class="fa-solid fa-shield"></i>
            {{/if}}
        </a>
    </span>
    <span><a data-action="editItem" data-tooltip="{{localize 'aoa.edit'}}">
        <i class="fa-solid fa-pen-to-square"></i>
    </a></span>
    <span class="flex-fill"></span>
    <span>
        <span>
            <i class="fa-solid fa-user-ninja fa-xl"></i>
        </span>
        {{numberFormat system.penalty sign=true decimals=0}}
    </span>
    <span>
        <span style="position: relative;">
            <i class="fa-regular fa-shield fa-xl"></i>
            <i class="fa-solid fa-plus" style="position: absolute; top: 0.2em; left: 0.32em;"></i>
        </span>
        {{numberFormat system.armorBonus sign=true decimals=0}}
    </span>
</div>
