<div class="flexrow">
    <label for="system.armorBonus">{{localize "aoa.armor-bonus"}}</label>
    <input name="system.armorBonus" value="{{numberFormat item.system.armorBonus sign=true decimals=0}}" type="text" data-dtype="Number">
</div>
<div class="flexrow">
    <label for="system.penalty">{{localize "aoa.armor-penalty"}}</label>
    <input name="system.penalty" value="{{numberFormat item.system.penalty sign=true decimals=0}}" type="text" data-dtype="Number" sign="true">
</div>
<div class="flexrow">
    <label for="system.magical">{{localize "aoa.magical"}}</label>
    <input name="system.magical" type="checkbox" {{checked item.system.magical}}>
</div>
<div class="flexrow">
    <label for="system.needFreeHand">{{localize "aoa.need-free-hand"}}</label>
    <input name="system.needFreeHand" type="checkbox" {{checked item.system.needFreeHand}}>
</div>
<div class="flexrow">
    <label for="system.stacks">{{localize "aoa.stacks"}}</label>
    <input name="system.stacks" type="checkbox" {{checked item.system.stacks}}>
</div>
<div class="flexrow">
    <label for="system.negateAbilityBonus">{{localize "aoa.negateAbilityBonus"}}</label>
    <input name="system.negateAbilityBonus" type="checkbox" {{checked item.system.negateAbilityBonus}}>
</div>
