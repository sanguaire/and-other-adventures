<div class="sheet-header">
    <a data-action="showEffects" style="position: fixed"><i class="fa-solid fa-person-rays"></i></a>

    <img src="{{item.img}}" data-edit="img" alt="item.img">
    <div class="information">
        <label for="name">{{localize "aoa.name"}}: </label>
        <input name="name" type="text" value="{{item.name}}">
        <label>{{localize "aoa.item-type"}}:</label>
        {{#with (concat "ITEM.Type" (capFirst item.type))}}
            {{localize string}}
        {{/with}}
    </div>
</div>
