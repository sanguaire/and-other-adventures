<div class="flexrow">
    <label for="system.quantity.value">{{localize "aoa.quantity"}}</label>
    <input name="system.quantity.value" value="{{item.system.quantity.value}}" type="text" data-dtype="Number" min="{{item.system.quantity.min}}">
</div>
<div class="flexrow" >
    <label for="base-damage">{{localize "aoa.base-damage"}}:</label>
    <div class="flexrow"style="gap:0;">
        <input id="base-damage" type="text" style="text-align: right" data-dtype="Number" value="{{item.system.baseDamage.noOfDie}}"
               name="system.baseDamage.noOfDie" min="1">
        <select class="text-centered" name="system.baseDamage.dieType">
            {{#select item.system.baseDamage.dieType}}
                <option value="d4">{{localize 'aoa.d4'}}</option>
                <option value="d6">{{localize 'aoa.d6'}}</option>
                <option value="d8">{{localize 'aoa.d8'}}</option>
                <option value="d10">{{localize 'aoa.d10'}}</option>
                <option value="d12">{{localize 'aoa.d12'}}</option>
            {{/select}}
        </select>
    </div>
</div>
<div class="flexrow">
    <label>{{localize "aoa.damage-bonus"}}:</label>
    <input name="system.damageBonus.melee" value="{{numberFormat item.system.damageBonus.melee sign=true decimals=0}}" type="text" data-dtype="Number" sign="true">
    <label for="system.damageBonus.melee">{{localize "aoa.melee"}}</label>
    <input name="system.damageBonus.ranged" value="{{numberFormat item.system.damageBonus.ranged sign=true decimals=0}}" type="text" data-dtype="Number" sign="true">
    <label for="system.damageBonus.ranged">{{localize "aoa.ranged"}}</label>
</div>
<div class="flexrow">
    <label>{{localize "aoa.attack-bonus"}}:</label>
    <input name="system.attackBonus.melee" value="{{numberFormat item.system.attackBonus.melee sign=true decimals=0}}" type="text" data-dtype="Number" sign="true">
    <label for="system.attackBonus.melee">{{localize "aoa.melee"}}</label>
    <input name="system.attackBonus.ranged" value="{{numberFormat item.system.attackBonus.ranged sign=true decimals=0}}" type="text" data-dtype="Number" sign="true">
    <label for="system.attackBonus.ranged">{{localize "aoa.ranged"}}</label>
</div>

{{#if item.actor}}
    {{#if item.actor.system.class.hasSpecialization}}
        <div class="flexrow">
            <label for="system.specialized">{{localize "aoa.specialized"}}:</label>
            <input name="system.specialized" type="checkbox" {{checked item.system.specialized}}>
        </div>
    {{/if}}
{{/if}}

<div class="flexrow">
    <label for="system.ranged">{{localize "aoa.ranged"}}:</label>
    <input name="system.ranged" type="checkbox" {{checked item.system.ranged}}>
</div>

<div class="flexrow">
    <label for="system.usesAmmo">{{localize "aoa.uses-ammo"}}:</label>
    <input name="system.usesAmmo" type="checkbox" {{checked item.system.usesAmmo}}>
    {{#if item.system.usesAmmo}}
        <select name="system.ammoId" {{#unless ammo}}disabled{{/unless}} >
            {{#select item.system.ammoId}}
                <option value=""></option>
                {{#each ammo}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            {{/select}}
        </select>
    {{/if}}

</div>
<div class="flexrow">
    <label for="system.hasMeleeOption">{{localize "aoa.has-melee-option"}}:</label>
    <input name="system.hasMeleeOption" type="checkbox" {{checked item.system.hasMeleeOption}}>
</div>
<div class="flexrow">
    <label for="system.magical">{{localize "aoa.magical"}}:</label>
    <input name="system.magical" type="checkbox" {{checked item.system.magical}}>
</div>


