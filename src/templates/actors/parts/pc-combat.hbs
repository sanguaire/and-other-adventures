<h1>{{localize "aoa.combat-header"}}</h1>
<div class="flexrow justify-center text-centered" style="margin-bottom: 0.5em; border-bottom: 2px solid var(--sheet-dark-accent)">
    <span>
         <label>{{localize "aoa.base-attack-bonus"}}</label>
        {{numberFormat actor.system.attack.base sign=true decimals=0}}
    </span>

    <span>
        <a data-action="roll" data-action-type="melee"><i class="fa-solid fa-dice-d20"></i></a>
      <label>{{localize "aoa.melee"}}</label>
        {{numberFormat actor.system.attack.melee sign=true decimals=0}}
    </span>

    <span>
        <a data-action="roll" data-action-type="ranged"><i class="fa-solid fa-dice-d20"></i></a>

         <label>{{localize "aoa.ranged"}}</label>
        {{numberFormat actor.system.attack.ranged sign=true decimals=0}}
    </span>


</div>
<div class="flexrow align-center" style="margin-bottom: 0.5em; border-bottom: 2px solid var(--sheet-dark-accent)">
    <label>{{localize "aoa.stances.header"}}:</label>
    {{radioBoxes "system.combatStance" combatStances checked=actor.system.combatStance}}
</div>

<div class="lists">
    <div class="weapon-list"></div>
    <div class="armor-list"></div>
</div>

